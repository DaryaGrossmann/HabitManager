<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Login{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('login') }}
    {% endblock %}
</head>

{% block content %}
    <body>
    <span id="span_logo" class="d-block p-2 text-white">
        <div class="text-center">
               <img id="logo" alt="logo" class="img-fluid" src="{{ asset('build/images/logo.png')}}">
        </div>
    </span>
    <div class="d-block p-2">

        <div class="d-flex flex-row justify-content-center">
            <div class="d-flex flex-column mb-5">
                {#                <img src="{{ asset('build/images/logo.png') }}">#}

            </div>
        </div>
        <div class="d-flex flex-row justify-content-center">
            <div class="d-flex flex-column">


                {{ form_start(form,{'attr':{'class':'form-group justify-content-center'}}) }}
                {% if error %}
                    {{ dump(error) }}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {#                {{ form_widget(form) }}#}
                {{ form_row(form.email,{'attr':{'class':'d-flex justify-content-center'}}) }}
                {{ form_row(form.password,{'attr':{'class':'d-flex justify-content-center'}}) }}
                <input type="hidden" name="_csrf_token"
                                        value="{{ csrf_token('authenticate') }}"
                >
                <div class="d-flex flex-row justify-content-end">
                    <div class="d-flex flex-column mr-3">
                        <button class="btn btn-lg btn-primary" type="submit">
                            Anmelden
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </body>
{% endblock %}
